<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="tolerance_wizard_view" model="ir.ui.view">
            <field name="name">tolerance.wizard.form</field>
            <field name="model">wizard.tolerance</field>
            <field name="arch" type="xml">
                <form string="Tolerance Wizard">
                    <div>
                        Done quantity is not between minimum and maximum tolerance
                    </div>
                    <footer>
                        <button name="action_confirm" string="Accept" type="object" class="btn-primary"/>
                        <button  name="action_reject" string="Reject" type="object" class="btn btn-danger" />
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>